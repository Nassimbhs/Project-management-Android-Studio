<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Acc">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/Utilisateurs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:drawableLeft="@drawable/ic_baseline_group_24"
            android:text="Utilisateurs" />

        <Button
            android:id="@+id/Taches"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:drawableLeft="@drawable/ic_baseline_task_24"
            android:text="Taches" />

        <Button
            android:id="@+id/Equipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:drawableLeft="@drawable/ic_baseline_supervised_user_circle_24"
            android:text="Equipes" />

        <Button
            android:id="@+id/Projets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#E91E63"
            android:drawableLeft="@drawable/ic_dashboard_black_24dp"
            android:text="Projets" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>